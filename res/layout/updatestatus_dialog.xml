<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="260dp"
    android:layout_height="270dp"
    android:background="#ffffff"
    android:orientation="vertical" >

    <Button
        android:id="@+id/updaate_status_cancel_button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/update_status_ok_button"
        android:layout_alignBottom="@+id/update_status_ok_button"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/update_status_ok_button"
        android:background="#DE695C"
        android:text="CANCEL"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#BD3527" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/spiqslogo" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="27dp"
        android:textAlignment="center"
        android:gravity="center"
        
        android:text="Write Something Here U Can Speak Or Mention Someone"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="13sp" />

    <ImageButton
        android:id="@+id/update_status_mention_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/updaate_status_cancel_button"
        android:layout_toLeftOf="@+id/update_status_speaqs_button"
        android:src="@drawable/ic_menu_allfriends" />

    <ImageButton
        android:id="@+id/update_status_speaqs_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/editText1"
        android:layout_alignTop="@+id/update_status_mention_button"
        android:src="@drawable/ic_menu_set_as_ringtone" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/update_status_mention_button"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:hint="Type Here"
        android:maxLength="48"
        android:singleLine="true"
        android:textSize="13sp" />

    <Button
        android:id="@+id/update_status_ok_button"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#BD3527"
        android:text="SUBMIT"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/melodi_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignTop="@+id/update_status_mention_button"
        android:background="@drawable/music_icon" />

</RelativeLayout>